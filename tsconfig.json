{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5", // 目标语言的版本
    "module": "esnext",
    "lib": ["dom", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "declaration": false, // 是否生成声明文件
    // "declarationDir": "dist/types", // 声明文件位置
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types", "src/common/types/"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
